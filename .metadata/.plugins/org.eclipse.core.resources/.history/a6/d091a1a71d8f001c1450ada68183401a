package first;

//将一个给定字符串 s 根据给定的行数 numRows ，以从上往下、从左到右进行 Z 字形排列。s 由英文字母（小写和大写）、',' 和 '.' 组成
//
//比如输入字符串为 "PAYPALISHIRING" 行数为 3 时，排列如下：
//
//P   A   H   N
//A P L S I I G
//Y   I   R

public class first {

}

class Solution {
	public String convert(String s, int numRows) {
		if (s.length() <= numRows)
			return s;
		// 如果只有一列就直接输出

		else {
			String s1 = "";
			// 结果答案

			int[] loc = new int[numRows];
			for (int i = 0; i < numRows; i++) {
				loc[i] = i;
			}
			// 赋予初始位置
			
			int m = 0;
			
			for (int j = 1; j < numRows - 1; j++) {
				s1 = s1 + s.charAt(loc[j]);
				// 添加第0个字符

				
				while (loc[j] <= s.length()) {
					m++;
					if (m % 2 != 0) {
						loc[j] = loc[j] + 2 * (numRows - j);
						s1 = s1 + s.charAt(loc[j]);
						// 添加奇数个字符
					} else {
						loc[j] = loc[j] + 2 * j;
						s1 = s1 + s.charAt(loc[j]);
						//添加偶数个字符
					}
				}
			}
			String s2="";
			String s3="";
			m=0;
			while(loc[0] <= s.length()) {
				loc[0] = loc[0] + 2 * (numRows - 1)*m;
				s2 = s2 + s.charAt(loc[0]);
				m++;
			}
			m=0;
			while(loc[numRows-1] <= s.length()) {
				loc[numRows-1] = loc[0] + 2 * (numRows - 1)*m;
				s3 = s3 + s.charAt(loc[0]);
				m++;
			}
			
			return s2+s1+s3;
		}

	
	}
}