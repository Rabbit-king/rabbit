package Heapsort;

public class Heapsort<T extends Comparable<T>> {
	T data[]=null;
	int N=0;
	
	
	
	public Heapsort(T[] a, int n) {
		this.a = a;
		N = n;
	}
	public void BeHeap(){
		for(int i=N;i>1;i--){
			if(less(data[i/2],data[i]))
				exchange(i/2,i);
		}
	}	
	public boolean less(Comparable<T> w, Comparable<T> v) {
		return w.compareTo((T) v) < 0;
	}
	public void exchange(int i, int j) {
		Comparable<T> temp;
		temp = data[i];
		data[i] = data[j];
		data[j] = (T) temp;
	}
}
