package Heapsort;

public class Heapsort<T extends Comparable<T>> {
	Comparable<T> data[]=null;
	int N=0;

	public Heapsort(T[] a) {
		this.data = new Comparable[a.length];
		N = a.length;
	}
	public void BeHeap(){
		for(int i=N-1;i>0;i--){
			if(less(data[i/2-1],data[i]))
				exchange(i/2-1,i);
		}
	}	
	public boolean less(T w, T v) {
		return w.compareTo(v) < 0;
	}
	public void exchange(int i, int j) {
		Comparable<T> temp;
		temp = data[i];
		data[i] = data[j];
		data[j] = temp;
	}
	public void print() {
		for(int i=0;i<N;i++) {
			System.out.print(data[i]+" ");
		}
	}
}
