package third;

//假设你正在爬楼梯。需要 n 阶你才能到达楼顶。
//
//每次你可以爬 1 或 2 个台阶。你有多少种不同的方法可以爬到楼顶呢？

public class third {

}

class Solution {
    public int climbStairs(int n) {
    	int x=n/2;
    	
    	int count=0;
    			
    	while(x>=0) {
    		count+=C(n-x,x);
    		x--;
    	}
    	
		return n;
    }
    
    public int C(int m,int x) {
    	int re=1;
    	
    	if(x==0)
    		return 1;
		for(int i=0;i<x;i++){
			re=re*(m-i)/(i+1);
		} 	
    	
    	return re;	
    }
}