package first;

public class first {
	public static void main(String[] args) {
		Solution S = new Solution();
		System.out.println(S.isHappy(1111111));
	}
}

class Solution {
	public boolean isHappy(long n) {

		long sum = 0;
		do {
			sum=0;
			while (n > 0) {
				sum = sum + (n % 10) * (n % 10);
				n = n / 10;
			}
			n=sum;
		} while (sum>9);

		if (sum == 1)
			return true;
		else
			return false;
	}
}