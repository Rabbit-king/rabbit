package quicksort;
//快速排序复习 完成！！！
public class quicksort<T extends Comparable<T>> {
	public T[] quicksort(T[] date) {
		return quicksort(date, 0, date.length - 1);
	}

	public T[] quicksort(T[] date, int left, int right) {
		if(left>=right)
			return null;
		
		T key = date[left];
		int l = left;
		int r = right;

		while (l < r) {
			while ((date[r].compareTo(key) >= 0) && l < r) {
				r--;
			}
			while (date[l].compareTo(key) <= 0 && l < r) {
				l++;
			}

			if (l < r) {
				T temp = date[r];
				date[r] = date[l];
				date[l] = temp;
			}
		}

		T temp=date[r];
		date[r]=date[left];
		date[left]=temp;
		
		
		quicksort(date, left, r - 1);
		quicksort(date, r + 1, right);

		return date;
	}
	public static void main(String[] args) {
		Double[] a = { 2.0, 5.0, -5.6, 66.6, 7.02, 11.0, 1.2, 1.3, 1.3, 6.0, 2.2 };
		quicksort<Double> q=new quicksort<>();
		for(int i:q.quicksort(a)) {
			System.out.print(i+" ");
		}
	}
}
